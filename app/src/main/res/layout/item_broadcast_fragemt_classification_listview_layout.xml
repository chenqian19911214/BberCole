<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/top_margin5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/classification_type_backage_id"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/top_margin3"
        android:layout_marginRight="@dimen/top_margin3"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/classification_type_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/top_margin10"
            android:src="@mipmap/cankangengduo" />

        <TextView
            android:id="@+id/classification_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/classification_type_imag"
            android:layout_marginTop="@dimen/top_margin10"
            android:gravity="center_horizontal"
            android:text="长腿美模"
            android:textColor="#ff0058"
            android:textSize="@dimen/top_margin15" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/classification_brablecase_data_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/top_margin3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/classfifctationlayoutback"
            android:visibility="visible">

            <com.bber.company.android.view.customcontrolview.MyImageView
                android:id="@+id/classfifctation_brablecastion_icon"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/classfifctation_brablecastion_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/classfifctation_brablecastion_icon"
                android:layout_marginBottom="@dimen/top_margin10"
                android:layout_marginRight="@dimen/top_margin10"
                android:layout_marginTop="@dimen/top_margin10"
                android:src="@mipmap/livebroadcast_status_online" />

            <TextView
                android:id="@+id/classfifctation_brablecastion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/classfifctation_brablecastion_icon"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="主播名称"
                android:layout_marginTop="@dimen/top_margin10"
                android:textColor="#ff0058"
                android:textSize="@dimen/top_margin10" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/top_margin3"
            android:background="@drawable/classfifctationlayoutback"
            android:visibility="visible">

            <com.bber.company.android.view.customcontrolview.MyImageView
                android:id="@+id/classfifctation_brablecastion_icon2"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/classfifctation_brablecastion_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/top_margin10"
                android:layout_marginTop="@dimen/top_margin10"
                android:layout_marginBottom="@dimen/top_margin10"
                android:layout_below="@id/classfifctation_brablecastion_icon2"
                android:src="@mipmap/livebroadcast_status_online" />

            <TextView
                android:id="@+id/classfifctation_brablecastion_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/classfifctation_brablecastion_icon2"
                android:layout_marginTop="@dimen/top_margin10"
                android:text="主播名称"
                android:textColor="#ff0058"
                android:textSize="@dimen/top_margin10" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/classfifctationlayoutback"
            android:layout_marginLeft="@dimen/top_margin3"
            android:visibility="visible">

            <com.bber.company.android.view.customcontrolview.MyImageView
                android:id="@+id/classfifctation_brablecastion_icon3"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/classfifctation_brablecastion_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/top_margin10"
                android:layout_marginTop="@dimen/top_margin10"
                android:layout_below="@id/classfifctation_brablecastion_icon3"
                android:src="@mipmap/livebroadcast_status_online" />

            <TextView
                android:id="@+id/classfifctation_brablecastion_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/classfifctation_brablecastion_icon3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/top_margin10"
                android:layout_marginTop="@dimen/top_margin10"
                android:text="主播名称"
                android:textColor="#ff0058"
                android:textSize="@dimen/top_margin10" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
