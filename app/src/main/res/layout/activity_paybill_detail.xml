<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_custom"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_margin12"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/item_style_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="平台单号:" />

                    <TextView
                        android:id="@+id/tv_our_order_id"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="三方单号:" />

                    <TextView
                        android:id="@+id/tv_dp_order_id"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="申请金额:" />

                    <TextView
                        android:id="@+id/tv_order_money"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="交易金额:" />

                    <TextView
                        android:id="@+id/tv_order_paymoney"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="交易状态:" />

                    <TextView
                        android:id="@+id/tv_order_status"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="下单时间:" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_margin6"
                    android:layout_marginTop="@dimen/top_margin12"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="交易方式:" />

                    <TextView
                        android:id="@+id/tv_order_method"
                        style="@style/main_text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_margin12"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/view_line" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>