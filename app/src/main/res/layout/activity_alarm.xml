<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/view_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_notiy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_margin12"
            android:orientation="vertical">

            <TextView
                style="@style/text_pink15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_chinse_name" />

            <TextView
                android:id="@+id/content"
                style="@style/text_white12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin6"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="奥斯卡法拉利可接受法律框架三方" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/date"
        style="@style/text_pink12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="12.50" />
</RelativeLayout>