<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/main_theme"
    android:elevation="0dp"
    android:gravity="center_vertical"
    android:minHeight="45dp"
    android:paddingLeft="-8dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/top_margin8"
        android:paddingLeft="@dimen/top_margin10"
        android:paddingRight="@dimen/top_margin20"
        android:paddingTop="@dimen/top_margin8">

        <TextView
            android:id="@+id/home_top_city"
            style="@style/text_white14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/triangle_up"
            android:gravity="center_vertical"
            android:text="@string/city" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/top_margin10"
            android:layout_marginRight="@dimen/top_margin10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/country_et_search"
                style="@style/main_text_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_white_bg"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="4dp"
                android:hint="搜索"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColorHint="@color/sub_text" />

            <ImageView
                android:id="@+id/iv_cleartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:padding="4dp"
                android:src="@mipmap/clear_button"
                android:visibility="invisible" />

        </LinearLayout>
        <!--
                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/map_icon" />
        -->
    </LinearLayout>
</android.support.v7.widget.Toolbar>