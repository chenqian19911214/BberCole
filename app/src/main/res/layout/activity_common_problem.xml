<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_custom" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/commonpronlemack">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/top_margin15"
            android:gravity="center_vertical"
            android:text="猜你想问"
            android:textColor="@color/textcolor" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commonproblemlistid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/commonpronlemack"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/top_margin15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="没有你想问的问题？"
            android:textColor="@color/textcolor" />

        <Button
            android:id="@+id/commonProblem_botton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Chartreuse_qian"
            android:gravity="center"
            android:text="联系客服"
            android:textColor="@color/AliceBlue" />

    </LinearLayout>

</LinearLayout>
