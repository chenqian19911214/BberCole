<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/btn_enter_addetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ll_papa"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/top_margin20"
        android:layout_marginTop="@dimen/top_margin20"
        android:background="@mipmap/timecounter"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_enter_papa"
            style="@style/text_white15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/text_white8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过" />
    </LinearLayout>

</RelativeLayout>
