<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.bber.company.android.view.customcontrolview.MovieRecorderView
        android:id="@+id/moive_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/top_margin20"
        android:alpha="0.5"
        android:background="@drawable/black_rectangle"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/text_white12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请示:认证时请务必说出下面4位数字" />

        <TextView
            android:id="@+id/codeNum"
            style="@style/text_white18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="9  5  2  7" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/top_margin20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/rec_start_bg" />

        <TextView
            android:id="@+id/time_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="8"
            android:textColor="#333333"
            android:textSize="55sp"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>